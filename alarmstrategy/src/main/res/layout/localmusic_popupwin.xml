<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pop_layout"
    android:background="@color/transparent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:background="@drawable/shape_round_white"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/alarm_whistle_choose_local_list"
            android:textSize="@dimen/common_textsize_large"
            android:textColor="@color/gray_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_line_height"
            android:background="@color/gray_light"/>

        <ListView
            android:id="@+id/local_music_list"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:divider="@color/gray_light"
            android:dividerHeight="@dimen/activity_line_height"
            android:fadeScrollbars="true">
        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_line_height"
            android:background="@color/gray_light"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</RelativeLayout>