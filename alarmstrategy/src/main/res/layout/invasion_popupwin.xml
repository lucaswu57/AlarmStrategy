<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <Button
        android:id="@+id/popupwin_box_line_controls"
        android:layout_width="639px"
        android:layout_height="295px"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/popwin_four_line_icon"
        android:text="@string/alarm_popupwin_invas"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/popupwin_hand_icon"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/popwin_hand_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/popupwin_box_line_controls"
        android:layout_below="@id/popupwin_box_line_controls" />

    <ImageView
        android:id="@+id/popupwin_arrow_icon"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/popwin_arrow_icon"
        android:layout_below="@id/popupwin_hand_icon"
        android:layout_toLeftOf="@id/popupwin_hand_icon"
        android:layout_toStartOf="@id/popupwin_hand_icon" />


    <Button
        android:id="@+id/popupwin_confirm_btn"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_below="@+id/popupwin_arrow_icon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/popwin_line_btn"
        android:text="@string/alarm_popupwin_iknow"
        android:textColor="@color/white"
        android:textSize="35sp"/>




</RelativeLayout>