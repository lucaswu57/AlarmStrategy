<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="35dp"
        android:textColor="#ffa71b10"
        android:textSize="@dimen/dialog_item_text_size"
        android:id="@+id/dialog_check_box_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/dialog_check_box_item_check"
        android:src="@drawable/check_ok"
        android:layout_marginRight="35dp"
        android:layout_gravity="right"
        android:layout_width="22dp"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/dialog_check_box_item_underline"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_height"
        android:background="@color/dialog_divide_color" />
</FrameLayout>
