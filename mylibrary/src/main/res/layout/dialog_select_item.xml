<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#ff737373"
        android:gravity="center"
        android:textSize="@dimen/dialog_item_text_size"
        android:id="@+id/dialog_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/dialog_item_check"
        android:src="@drawable/check_ok"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"
        android:layout_width="@dimen/dialog_check_icon_size"
        android:layout_height="match_parent" />
</FrameLayout>
