<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_top_height"
    android:paddingTop="5px"
    >

        <TextView

            android:gravity="top"
            android:layout_marginLeft="@dimen/home_top_left_space"
            android:layout_gravity="left|top"
            android:id="@+id/ipad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_top_zigbee_text"
            android:textColor="#ffffffff"
            android:textSize="@dimen/top_zigbee_size"
           />

        <TextView
            android:textSize="@dimen/top_zigbee_num_text_size"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="top"

            android:id="@+id/top_zigbee_num"
            android:layout_marginLeft="190px"
            android:background="@drawable/blank_circle_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.qihancloud.custom.WifiView
            android:layout_gravity="left|top"
            android:id="@+id/home_wifi"
            android:layout_width="@dimen/top_wifi_width"
            android:layout_height="@dimen/top_wifi_height"
            android:layout_marginLeft="250px" />

        <View android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="1">

        </View>

        <com.qihancloud.custom.TimeView
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/time"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="@dimen/top_time_size"
             />

        <TextView
            android:gravity="top"
            android:layout_gravity="right|top"
            android:id="@+id/battery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="165px"
            android:textColor="#ffffffff"
            android:textSize="@dimen/top_time_size" />

        <com.qihancloud.custom.Battery
            android:layout_marginTop="8px"
            android:layout_gravity="right|top"
            android:id="@+id/battery"
            android:layout_width="@dimen/top_battery_width"
            android:layout_height="@dimen/top_battery_height"
            android:layout_marginRight="@dimen/home_top_right_space"
            />

    <TextView
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="@dimen/home_top_title_size"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_gravity="left|bottom"
        android:id="@+id/back_btn"
        android:layout_width="@dimen/top_back_btn_width"
        android:layout_height="@dimen/top_back_btn_height"
        android:layout_marginLeft="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/go_back"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
       />
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/more_option_btn"
        android:layout_width="@dimen/top_oper_btn_width"
        android:layout_height="@dimen/top_oper_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="@dimen/home_top_right_space"
        android:scaleType="centerInside"
        android:src="@drawable/more_option"
        android:visibility="gone"
        />
</FrameLayout>
